<?xml version="1.0"?>
<odoo>
    <!-- mall tenant actions menu-->
    <record id="mall_tenant_manager_action" model="ir.actions.act_window">
        <field name="name" >Tenants Managers</field>
        <field name="res_model">mall.tenant.manager</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Nothing is here...
            </p>
          </field> 
    </record>

    <record id="mall_tenant_manager_form" model="ir.ui.view">
      <field name="name" >tenant.manager.form</field>
      <field name="model">mall.tenant.manager</field>
      <field name="arch" type="xml">
        <form string="Tenant Manager">
          <sheet>
            <h1><field name="name" /></h1>
            <group>
              <group>
                <field name="address" />
                <field name="tenant_manager_email" />
              </group>
              <group>
                <field name="tenant_manager_contact" />
                <field name="tenant_manager_mobile" />
              </group>
            </group>
            <notebook>
              <page string="Tenants">
                <field name="tenant_assigned_ids" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

</odoo>